<script type="text/javascript">
    $(document).ready(function () {
        $("input:radio[name=traveler]").click(function () {
            var value = $(this).val();
            //console.log(value);
            if (value == 'filled') {
                $('#traveler-filled').show();
                $('#traveler-import').hide();
            } else {
                $('#traveler-filled').hide();
                $('#traveler-import').show();
            }
        });

        $('input[type="file"]').change(function () {
            var filename = $(this).val();
            $(this).closest('.gen-file-upload').find('.file-name').html(filename);
        });
    });   
</script>





